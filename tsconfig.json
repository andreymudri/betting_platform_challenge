{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"outDir": "dist",
		"noImplicitAny": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"rootDirs": ["src", "tests"],
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"]
		},
		"strictNullChecks": true,
		"plugins": [
			{
				"transform": "typescript-transform-paths"
			}
		]
	},
	"include": ["src", "tests", ".eslintrc.js", "jest.config.js", ".eslintrc.js"]
}
